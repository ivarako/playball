<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewGameActivity"
    android:orientation="vertical"
    android:background="@drawable/balls">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/gameImageView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/back"/>

        <Button
            android:id="@+id/gameBtnImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="70dp"
            android:background="@android:drawable/editbox_dropdown_light_frame"
            android:text="Add a picture"
            android:onClick="GamePicture"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/gameTxtTittle"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="@android:drawable/editbox_dropdown_light_frame"
            android:hint="Title"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="25dp"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/gameBtnDateTime"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:background="@android:drawable/editbox_dropdown_light_frame"
                android:text="Choose date and time"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="10dp"
                android:onClick="GameDateTime"/>

            <EditText
                android:id="@+id/gameTxtDateTime"
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:background="@android:drawable/editbox_dropdown_light_frame"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:visibility="invisible"/>

        </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/gameBtnLocation"
                    android:layout_width="167dp"
                    android:layout_height="50dp"
                    android:background="@android:drawable/editbox_dropdown_light_frame"
                    android:text="Choose a location"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="10dp"
                    android:onClick="GameLocation"/>

                <EditText
                    android:id="@+id/gameTxLocation"
                    android:layout_width="180dp"
                    android:layout_height="50dp"
                    android:background="@android:drawable/editbox_dropdown_light_frame"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:visibility="invisible"/>

        </LinearLayout>

        <Spinner
            android:id="@+id/gameSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:background="@android:drawable/editbox_dropdown_light_frame">
        </Spinner>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="30dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/gameBtnSave"
            android:background="@android:drawable/editbox_dropdown_light_frame"
            android:text="Save"
            android:textStyle="bold"
            android:onClick="GameSave"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/gameBtnDiscard"
            android:background="@android:drawable/editbox_dropdown_light_frame"
            android:text="Discard"
            android:textSize="10sp"
            android:layout_marginLeft="7dp"
            android:onClick="GameDiscard"/>

    </LinearLayout>

</LinearLayout>